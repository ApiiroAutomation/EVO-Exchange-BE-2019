<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.5.0" author="jack.petrov">
        <createTable tableName="chat_rooms">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(45)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.5.1" author="jack.petrov">
        <createTable tableName="user_chats">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.5.2" author="jack.petrov">
        <addForeignKeyConstraint baseColumnNames="chat_id"
                                 baseTableName="user_chats"
                                 constraintName="fk_user_chats_to_chat_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="chat_rooms"/>
    </changeSet>

    <changeSet id="1.5.3" author="jack.petrov">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_chats"
                                 constraintName="fk_user_chats_to_user_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet id="1.5.4" author="jack.petrov">
        <createTable tableName="messages">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" unique="true" nullable="false"/>
            </column>

            <column name="chat_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>

            <column name="content" type="VARCHAR(2000)">
                <constraints nullable="true"/>
            </column>

            <column name="read" type="BOOLEAN" defaultValue="false">
                <constraints nullable="true"/>
            </column>

            <column name="message_time" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(45)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.5.5" author="jack.petrov">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="messages"
                                 constraintName="fk_messages_to_user_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet id="1.5.6" author="jack.petrov">
        <addForeignKeyConstraint baseColumnNames="chat_id"
                                 baseTableName="messages"
                                 constraintName="fk_messages_to_chat_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="chat_rooms"/>
    </changeSet>
</databaseChangeLog>